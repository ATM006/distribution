<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>wso2sp-${project.version}</baseDirectory>
    <id>WSO2 Stream Processor Distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-kernel-${carbon.kernel.version}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>README.txt</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>bin/carbon.sh</exclude>
                <exclude>release-notes.html</exclude>
                <exclude>conf/osgi/launch.properties</exclude>
                <exclude>conf/deployment.yaml</exclude>
                <exclude>conf/log4j2.xml</exclude>
                <exclude>conf/transports/netty-transports.yml</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iwr</exclude>
                <exclude>**/*.eclipse</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../..</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/siddhi-runner</directory>
            <outputDirectory>conf/siddhi-runner</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/transports/siddhi-runner</directory>
            <outputDirectory>wso2/siddhi-runner/conf/transports</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/conf/osgi</directory>
            <outputDirectory>conf/osgi</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/resources/security</directory>
            <outputDirectory>resources/security</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>siddhi-runner.sh</include>
                <include>siddhi-runner.bat</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*.txt</include>
            </includes>
            <fileMode>444</fileMode>
        </fileSet>
        <fileSet>
            <directory>carbon-home/deployment/siddhi-files</directory>
            <outputDirectory>wso2/siddhi-runner/deployment/siddhi-files</outputDirectory>
            <fileMode>644</fileMode>
            <excludes>
                <exclude>empty.txt</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>wso2/siddhi-runner/deployment/csv-files</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>wso2/siddhi-runner/deployment/simulation-configs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <outputDirectory>deployment/siddhi-files</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
        </fileSet>

